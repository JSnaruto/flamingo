{
  "version": "0.0.1",
  "devDependencies": {
    "lerna": "^2.5.1",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": "^8.12.0 || >=9.7.0"
  },
  "precommit": "lerna run --concurrency 1 --stream precommit",
  "scripts": {
    "deploy": "lerna bootstrap && lerna publish",
    "prettier": "prettier --write 'packages/**/*.{js,jsx,json,css,md}'",
    "css": "yarn --cwd packages/css start",
    "react": "yarn --cwd packages/react start",
    "react:storybook": "yarn --cwd packages/react start:storybook",
    "start": "npm-run-all --parallel css react react:storybook"
  }
}
